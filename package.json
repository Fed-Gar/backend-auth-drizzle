{
  "name": "backend-auth-drizzle",
  "version": "1.0.0",
  "private": true,
  "description": "Auth service (Node + Express + TypeScript + Drizzle ORM)",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/app/server.ts",
    "start": "node --enable-source-maps dist/server.js",
    "build": "tsc -p tsconfig.json",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "zod": "^3.23.8",
    "drizzle-orm": "^0.32.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "drizzle-kit": "^0.26.0",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "ISC"
}
