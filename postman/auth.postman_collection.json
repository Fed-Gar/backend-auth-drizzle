            "type": "text/javascript",
            "exec": [
              "// Save token to environment variable 'jwt'",
              "const data = pm.response.json();",
              "if (data && data.token) {",
              "  pm.environment.set('jwt', data.token);",
              "} else {",
              "  pm.test('Token not found in response', function(){",
              "    pm.expect(false).to.be.true;",
              "  });",
              "}"
